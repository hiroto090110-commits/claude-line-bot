# LINE Bot設定
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# Claude API設定
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# セキュリティ設定
# 許可するLINE User IDをカンマ区切りで指定
# 例: ALLOWED_USER_IDS=U1234567890abcdef,Ufedcba0987654321
# 空の場合は全ユーザー許可（初回セットアップ時のみ）
ALLOWED_USER_IDS=

# サーバー設定
PORT=5000
